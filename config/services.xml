<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="false" />

        <service id="EMS\TableBundle\DataTable\DataTableBuilderInterface"
                 alias="ems_table.data_table.data_table_builder" />

        <service id="ems_table.data_table.data_table_builder"
                 class="EMS\TableBundle\DataTable\DataTableBuilder">
        </service>

        <service id="ems_table.data_table.data_table_renderer"
                 class="EMS\TableBundle\DataTable\DataTableRenderer">
            <argument type="service" id="twig"/>
        </service>

        <service id="ems_table.twig.table_extension" class="EMS\TableBundle\Twig\TableExtension">
            <tag name="twig.extension"/>
        </service>
        <service id="ems_table.twig.table_runtime" class="EMS\TableBundle\Twig\TableRuntime">
            <argument type="service" id="ems_table.data_table.data_table_renderer"/>
            <tag name="twig.runtime"/>
        </service>

    </services>
</container>